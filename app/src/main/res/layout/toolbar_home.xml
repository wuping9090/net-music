<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/navigation"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/ripple_circle"
        android:src="@drawable/navigation"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/navigation"
        android:layout_toEndOf="@id/navigation"
        android:layout_toLeftOf="@id/search"
        android:layout_toStartOf="@id/search"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/discover"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/actionbar_discover_normal"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/music"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/actionbar_music_selected"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/video"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ripple_circle"
            android:src="@drawable/actionbar_video_normal"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/search"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/ripple_circle"
        android:src="@drawable/search"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>